<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="postResult">
  <h2 id="postTitle"></h2>
  <p id="postBody"></p>
</div>

<script type="text/javascript">
  $(function() {
    $('form').submit(function(event) {
      event.preventDefault()

      var values = $(this).serialize()
      var posting = $.ajax({
        url: '/posts',
        method: 'POST',
        data: values
      })

      posting.done(function(post) {
        $('#postTitle').text(post.title)
        $('#postBody').text(post.description)
      })
    })
  })
</script>
